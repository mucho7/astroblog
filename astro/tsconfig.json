{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/utils": [
        "src/utils/index.ts"
      ],
      "@/components/*": [
        "src/components/*.astro"
      ],
      "@/layouts/*": [
        "src/layouts/*.astro"
      ]
    }
  },
  "include": [
    "src",
    "*.ts"
  ]
}